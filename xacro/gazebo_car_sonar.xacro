<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<gazebo reference="car_sonar/test_link">

<sensor name='FLSonar' type='camera'>

    <plugin name="SonarVisual" filename="libForwardLookingSonarGazebo.so" >
        <topic>car_sonar/FLSonar</topic>
        <debug>1</debug>
        <link_reference>car_sonar/test_link</link_reference>
        <horizontal_fov>${pi/2}</horizontal_fov>
        <!-- <horizontal_fov>${2*pi/3}</horizontal_fov> -->
        <!-- <horizontal_fov>${pi/4}</horizontal_fov> -->
        <vfov>${pi/2}</vfov>
        <bin_count>1200</bin_count>
        <beam_count>1200</beam_count>
        <image>
            <width>1200</width>
            <height>1200</height>
            <format>R32G32B32</format>
        </image>
        <clip>
            <near>0.1</near>
            <far>10</far>
        </clip>
        <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.1</stddev>
        </noise>
    </plugin>  
</sensor>  

</gazebo>

</robot>
